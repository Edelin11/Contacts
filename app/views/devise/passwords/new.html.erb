<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %> <br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border border-1 border-primary rounded-2 enable-shadows shadow mb-3 ", placeholder:" email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", data: {turbo: false}, class:"btn btn-secondary enable-shadows shadow  border border-3 border-primary border-top-0 border-end-0 border-start-0 mt-3 mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
